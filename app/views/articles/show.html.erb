<h2 class="text-center"> Title: <%= @article.title %> </h2>
<div class="card card-body bg-light col-8 offset-2">
<%if @article.user %>
<ul class='listing'>
    <div class='row text-center'>
      <div class='col-md-4 offset-4'>
      <li>Created by: </li>
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %>
        <li class='article-title'>
          <%= link_to  @article.user.username, user_path(@article.user) %>
        </li>
        <li><small><%= pluralize(@article.user.articles.count, 'article') if @article.user.articles %></small></li>
      </div>
    </div>
  </ul>
  <%end%>
  <h4 class="text-center description"><strong>Description:</strong></h4> 
  <hr>
    <%= simple_format(@article.description) %>
    <div class="article-actions">
      <%= link_to 'Edit this article', edit_article_path(@article), class: 'btn btn-primary custom-btn' %>
      <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete the article?"},class: 'btn btn-danger' %>
      <%= link_to 'View all articles', articles_path, class: 'btn btn-success' %>
    </div>
  </div>