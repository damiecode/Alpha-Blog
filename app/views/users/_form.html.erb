<%= render 'shared/errors', obj: @user %>
<div class='row'>
  <div class='col-12 col-auto'>
    <%= form_for @user do |f| %>
      <div class='form-group row'>
        <%= f.label :username, class: 'col-sm-2 col-form-label'  %>
        <div class='col-sm-10'>
          <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username', autofocus: true %>
        </div>
      </div>
      <div class='form-group row'>
        <%= f.label :password, class: 'col-sm-2 col-form-label'  %>
        <div class='col-sm-10'>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password', autofocus: true %>
        </div>
      </div>
      <div class='form-group row'>
        <%= f.label :email, class: 'col-sm-2 col-form-label'  %>
        <div class='col-sm-10'>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-8">
          <%= f.submit(@user.new_record? ? 'Sign up' : 'Update account', class: 'btn btn-primary btn-lg custom-btn') %>
        </div>
      </div>
    <% end %>
    <div class='col-4 offset-4'>
      [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
    </div>
  </div>
</div>